# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#A6DDD9\nbase_color:#18252B"
# Foreground/background
gtk-color-scheme = "fg_color:#A6DDD9\nbg_color:#1D1E1F"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#EDFFFE\nselected_bg_color:#5175A3"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#A6C7D7\ninsensitive_bg_color:#181E21"
# Menus
gtk-color-scheme = "menu_color:#1E242A"
# Links
gtk-color-scheme = "link_color:#EDFFFE\nvisited_link_color:#5175A3"
# Treeview headers
gtk-color-scheme = "column_header_color:#A4ECFC\nhover_column_header_color:#bcbdbc"
# Window decoration
gtk-color-scheme = "window_color:#1B2226"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#ffffff\ntooltip_bg_color:#293238"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "hacks-dark.rc"
