#!/bin/bash

yad --title "Quick Themes" \
--button='Default'!$HOME/.config/lilidog-themes/icons/paw-theme-18.png!:"x-terminal-emulator -T 'Reset All Themes' -e bash -c 'set-default-theme; echo $Press Press any key to close. ; read -srn1'" \
--button=gtk-close:1 --form --center --width=230 --borders=4 \
--height=544 --text="\n Please Close Geany \n Before Making Selection." --text-align=center \
--window-icon=applications-utilities \
    --form \
    --field="":LBL "" \
    --field="     Dark!$HOME/.config/lilidog-themes/icons/paw-dark.png!":BTN "$HOME/.config/lilidog-themes/dark-theme" \
    --field="   Taupe!$HOME/.config/lilidog-themes/icons/paw-taupe.png!":BTN "$HOME/.config/lilidog-themes/taupe-theme" \
     --field="    Drow!$HOME/.config/lilidog-themes/icons/paw-drow.png!":BTN "$HOME/.config/lilidog-themes/drow-theme" \
    --field="    Earth!$HOME/.config/lilidog-themes/icons/paw-earth.png!":BTN "$HOME/.config/lilidog-themes/earth-theme" \
    --field="    Slate!$HOME/.config/lilidog-themes/icons/paw-slate.png!":BTN "$HOME/.config/lilidog-themes/slate-theme" \
    --field="     Clay!$HOME/.config/lilidog-themes/icons/paw-clay.png!":BTN "$HOME/.config/lilidog-themes/clay-theme" \
    --field="     Grey!$HOME/.config/lilidog-themes/icons/paw-grey.png!":BTN "$HOME/.config/lilidog-themes/grey-theme" \
    --field="     Light!$HOME/.config/lilidog-themes/icons/paw-light.png!":BTN "$HOME/.config/lilidog-themes/light-theme" \
    --field="   Bright!$HOME/.config/lilidog-themes/icons/paw-bright.png!":BTN "$HOME/.config/lilidog-themes/bright-theme" \
    --field="":LBL "" \
    --field="      Wallpaper Changer!wallpaper":FBTN "feh-set-wallpaper" \
    --field="           LightDM Theme!preferences-system":FBTN "gksudo lightdm-gtk-greeter-settings" \
    --field="     Extras, Icons, Fonts!preferences-system":FBTN "xfce4-appearance-settings" \
    --field="         Terminal Themes!gnome-terminal":FBTN "ld-term-changer" \
