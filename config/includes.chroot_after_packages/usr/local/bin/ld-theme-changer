#!/bin/bash

yad --title "Theming Options" --escape-ok \
--button=gtk-close:1 --form --center --width=240 --height=450 --borders=6 \
--text="\n Lilidog Theme Settings.\n" --text-align=center \
--window-icon=applications-utilities \
    --form \
    --field="":LBL "" \
    --field="                Quick Themes!$HOME/.config/lilidog-themes/icons/paw-theme-18.png!":FBTN "ld-themes" \
    --field="                       Wallpaper!gtk-select-color":FBTN "feh-set-wallpaper" \
    --field="                        Grub BG!wallpaper":FBTN "x-terminal-emulator -T 'Grub Background Changer' -e bash -c 'grub-bg-changer; echo $'\n\nPress any key to close.'; read -srn1'" \
    --field="                         LightDM!lightdm-gtk-greeter-settings":FBTN "gksudo lightdm-gtk-greeter-settings" \
    --field="           Terminal Themes!gnome-terminal":FBTN "ld-term-changer" \
    --field="       Extras, Icons, Fonts!preferences-system":FBTN "xfce4-appearance-settings" \
    --field="   Random BG (Systray)!application-x-addon":FBTN "toggle-wallpaper-random" \
    --field="":LBL "" \
    --field="":LBL "" \
    --field="              Themes Folder!folder":FBTN "thunar .config/lilidog-themes" \
    --field="            Reset To Default!$HOME/.config/lilidog-themes/icons/paw-theme-18.png!":FBTN "x-terminal-emulator -T 'Reset All Themes' -e bash -c 'set-default-theme; echo $Press Press any key to close. ; read -srn1'" \
