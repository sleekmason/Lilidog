#!/bin/bash

yad --title "Quick Themes" \
--button='Default'!$HOME/.config/lilidog-themes/icons/paw-theme-18.png!:"x-terminal-emulator -T 'Reset All Themes' -e bash -c 'set-default-theme; echo $Press Press any key to close. ; read -srn1'" \
--button=gtk-close:1 --form --center --width=230 --borders=4 \
--height=544 --text="\n Please Close Geany \n Before Making Selection." --text-align=center \
--window-icon=applications-utilities \
    --form \
    --field="":LBL "" \
    --field="   Lilidog Neon!$HOME/.config/lilidog-themes/icons/paw-neon.png!":BTN "$HOME/.config/lilidog-themes/neon-theme" \
    --field=" Lilidog Cobalt!$HOME/.config/lilidog-themes/icons/paw-cobalt.png!":BTN "$HOME/.config/lilidog-themes/cobalt-theme" \
    --field="    Lilidog Dark!$HOME/.config/lilidog-themes/icons/paw-dark.png!":BTN "$HOME/.config/lilidog-themes/dark-theme" \
    --field="  Lilidog Taupe!$HOME/.config/lilidog-themes/icons/paw-taupe.png!":BTN "$HOME/.config/lilidog-themes/taupe-theme" \
    --field="     Lilidog Buff!$HOME/.config/lilidog-themes/icons/paw-buff.png!":BTN "$HOME/.config/lilidog-themes/buff-theme" \
    --field="   Lilidog Slate!$HOME/.config/lilidog-themes/icons/paw-slate.png!":BTN "$HOME/.config/lilidog-themes/slate-theme" \
    --field="    Lilidog Clay!$HOME/.config/lilidog-themes/icons/paw-clay.png!":BTN "$HOME/.config/lilidog-themes/clay-theme" \
    --field="    Lilidog Grey!$HOME/.config/lilidog-themes/icons/paw-grey.png!":BTN "$HOME/.config/lilidog-themes/grey-theme" \
    --field="    Lilidog Light!$HOME/.config/lilidog-themes/icons/paw-light.png!":BTN "$HOME/.config/lilidog-themes/light-theme" \
    --field="  Lilidog Bright!$HOME/.config/lilidog-themes/icons/paw-bright.png!":BTN "$HOME/.config/lilidog-themes/bright-theme" \
    --field="":LBL "" \
    --field="      Wallpaper Changer!wallpaper":FBTN "feh-set-wallpaper" \
    --field="           LightDM Theme!preferences-system":FBTN "gksudo lightdm-gtk-greeter-settings" \
    --field="     Extras, Icons, Fonts!preferences-system":FBTN "xfce4-appearance-settings" \
    --field="         Terminal Themes!gnome-terminal":FBTN "ld-term-changer" \
