#!/bin/bash
# Battery color changer by sleekmason 25-Jul-2022
#
#
FILE="$HOME/.config/tint2/tint2rc"
STRING="battery_font_color = #EB2323 100"
if  grep -q "$STRING" "$FILE" ; then
         notify-send --urgency low 'Battery text color - default' ;
         sed -i 's/^battery_font_color.*/battery_font_color = #93adac 100/g' "$FILE"
else
         notify-send --urgency low 'Battery text color - warning red' ;
         sed -i 's/^battery_font_color.*/battery_font_color = #EB2323 100/g' "$FILE"
fi
pkill -x tint2
tint2 &
