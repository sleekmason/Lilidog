#!/bin/bash
echo ""
echo ""
echo ""
read -p "  To Install Virtualbox + Dependencies, Please Press Enter!" ;
sudo cp /usr/local/bin/VirtualBox.list /etc/apt/sources.list.d
sudo rm /etc/apt/sources.list.d/virtualbox.list
sudo apt update && sudo apt install virtualbox-6.1 linux-headers-amd64 build-essential
sudo rm /etc/apt/sources.list.d/VirtualBox.list
sudo cp /usr/local/bin/virtualbox.list /etc/apt/sources.list.d
echo ""
echo "---------------------------------------------------------"
echo ""
echo "All Finished!"
echo ""
echo "If installed, you may want to put a menu entry into ~/.config/jgmenu/mymenu.csv"
echo "Just copy and paste the line below where you want it! Perhaps, ^tag(quickgrab)?"
echo ""
echo "VirtualBox,         virtualbox,       virtualbox"
echo ""
echo "---------------------------------------------------------"
