#!/bin/bash
echo ""
echo ""
echo ""
read -p "   This script is a helper script for you to 
   download and install VirtualBox from:
   
   https://www.virtualbox.org/wiki/Linux_Downloads

   VirtualBox is based in part from qemu, and is licenced
   under the GPL-V2.  A copy of which can be found in
   ~/.config/GPL/GPL-V2.

   Any extra programs associated with VirtualBox, are not 
   a part of this script and will need to be downloaded 
   separately from above if desired. (Extension pack, etc.)
   
   By downloading, you agree to the terms and conditions 
   of the respective license. 

   -----------------------------------------
   
   Please press enter to install VirtualBox.
   
   -----------------------------------------
   
   
   Or close this terminal window to quit the install." ;
echo ""   
echo ""
sudo wget -O- https://www.virtualbox.org/download/oracle_vbox_2016.asc | gpg --dearmor > virtualbox.gpg
cat virtualbox.gpg | sudo tee -a /usr/share/keyrings/virtualbox.gpg > /dev/null
echo 'deb [arch=amd64 signed-by=/usr/share/keyrings/virtualbox.gpg] https://download.virtualbox.org/virtualbox/debian bullseye contrib' |\
sudo tee -a /etc/apt/sources.list.d/virtualbox.list
sudo sed -i '1s/# deb/deb/g' /etc/apt/sources.list.d/virtualbox.list
sudo apt update && sudo apt install --install-recommends virtualbox-6.1 build-essential
sudo sed -i '1s/deb/# deb/g' /etc/apt/sources.list.d/virtualbox.list
sed -i '30 a Virtualbox,         virtualbox,       virtualbox' ~/.config/jgmenu/mymenu.csv
echo ""
echo "----------------------------------------------------------------"
echo ""
echo "All Finished!"
echo ""
echo "If installed, You should find a new menu entry under 'Quick Grab'"
echo ""
echo "----------------------------------------------------------------"
