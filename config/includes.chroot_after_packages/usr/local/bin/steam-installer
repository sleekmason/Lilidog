#!/bin/bash
echo ""
echo ""
echo ""
read -p "   Steam Installer

   Steam is a proprietary content delivery and launcher application 
   for video games, creative tools, and multimedia.

   https://wiki.debian.org/Steam
   
   WARNING*
   This will enable multi-arch, adding the i386 architecture,
   and install steam with --recommends enabled.

   https://wiki.debian.org/Multiarch/HOWTO
   
   ----------------------------------------------------------
   
   Please press enter to enable multi-arch and install Steam.
   
   ----------------------------------------------------------
      
   Or close this terminal window to quit the install." ;
echo ""
sudo dpkg --add-architecture i386 && sudo apt update && sudo apt install --install-recommends steam &&
sed -i '/Games,^checkout(games),applications-games/d' ~/.config/jgmenu/mymenu.csv &&
sed -i '/Development,^checkout(development),applications-development/i Games,^checkout(games),applications-games' ~/.config/jgmenu/mymenu.csv &&
sed -i '/tag(games)/d' ~/.config/jgmenu/mymenu.csv &&
sed -i '/Development/a ^tag(games)' ~/.config/jgmenu/mymenu.csv &&
sed -i '/Steam,         steam,       steam/d' ~/.config/jgmenu/mymenu.csv && 
sed -i '/tag(games)/a Steam,         steam,       steam' ~/.config/jgmenu/mymenu.csv &&
killall jgmenu
echo ""
echo "------------------------------------------------------------------"
echo ""
echo ""
echo ""
echo "All Finished!"
echo ""
echo "If installed, You should find a new menu entry under 'Games'"
echo "" 
echo "Menu entries will need to be removed manually if uninstalled." 
echo "See Jgmenu Conf under Configuration in the menu for directions."
echo ""
echo "------------------------------------------------------------------"
