#!/bin/bash
echo ""
echo ""
echo ""
read -p "   Steam Installer

   Steam is a proprietary content delivery and launcher 
   application for video games, creative tools, and multimedia.

   https://wiki.debian.org/Steam
   
   WARNING*
   This will enable multi-arch, adding the i386 architecture,
   and install steam with --recommends enabled.
   https://wiki.debian.org/Multiarch/HOWTO
   You have been warned!
   
   ---------------------------------------------------------
   
   Please press enter to enable multi-arch and install Steam.
   
   ---------------------------------------------------------
   
   
   Or close this terminal window to quit the install." ;
sudo dpkg --add-architecture i386 && sudo apt update && sudo apt install --install-recommends steam
echo ""
echo "-----------------------------------------------------"
echo ""
echo "All Finished!"
echo ""
echo "If installed, you may want to put a menu entry into ~/.config/jgmenu/mymenu.csv"
echo "Just copy and paste the line below where you want it! Perhaps, ^tag(quickgrab)?"
echo ""
echo "Steam,              steam,            steam"
echo ""
echo "Use: 'killall jgmenu' in a terminal to restart jgmenu if Steam doesn't show."
echo ""
echo ""
echo "-----------------------------------------------------"
