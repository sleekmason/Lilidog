#!/bin/bash

yad --title "Quick Themes" --escape-ok --borders=14 \
--button=gtk-close:1 --form --center --width=220 --height=570 \
--text="\n  Please Close Geany \n Before Making Selection.\n" --text-align=center \
--window-icon=gpick \
    --form \
    --field="":LBL "" \
