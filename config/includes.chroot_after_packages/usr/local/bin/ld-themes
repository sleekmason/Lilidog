#!/bin/bash

yad --title "GTK Themes" --escape-ok --borders=14 \
--button=gtk-close:1 --form --center --width=210 --height=570 \
--text="\n Please Close Geany \n Before Making Selection.\n" --text-align=center \
--window-icon=applications-utilities \
    --form \
    --field="":LBL "" \
    --field="          Neon!$HOME/.config/lilidog-themes/icons/paw-neon.png!":FBTN "$HOME/.config/lilidog-themes/neon-theme" \
    --field="         Cobalt!$HOME/.config/lilidog-themes/icons/paw-cobalt.png!":FBTN "$HOME/.config/lilidog-themes/cobalt-theme" \
    --field="         Denim!$HOME/.config/lilidog-themes/icons/paw-denim.png!":FBTN "$HOME/.config/lilidog-themes/denim-theme" \
