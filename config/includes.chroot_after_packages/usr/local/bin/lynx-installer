#!/bin/bash
read -p "                         [0;33mLynx Installer.[0m


   Lynx Web Browser: [0;35mhttps://lynx.invisible-island.net/[0m
   
   This script will install Lynx and create a new menu entry.
   
   [0;32mMenu entries will need to be removed manually if uninstalled.
   See Jgmenu Conf under Configuration in the menu for directions.
      
   ---------------------------------------------------------------
   
   Please press enter to install Lynx.
   
   ---------------------------------------------------------------[0m   
      
   Or close this terminal window to quit the install." ;
   if : >/dev/tcp/8.8.8.8/53; then
echo ""
sudo apt update && sudo apt install lynx &&
sed -i '/Lynx,               x-terminal-emulator -e bash -c lynx,    internet-web-browser/d' ~/.config/jgmenu/mymenu.csv &&
sed -i '5i Lynx,               x-terminal-emulator -e bash -c lynx,    internet-web-browser' ~/.config/jgmenu/mymenu.csv &&
killall jgmenu
echo "----------------------------------------------------------------"
echo ""
echo "[0;32mAll Finished![0m"
echo ""
echo "[0;33mIf installed, You should find a new main menu entry.[0m"
echo "" 
echo "[0;32mMenu entries will need to be removed manually if uninstalled." 
echo "See Jgmenu Conf under Configuration in the menu for directions.[0m"
echo ""
echo "----------------------------------------------------------------"
else
echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
 echo ""
 echo "   [0;33mNo Internet connection. Please connect and try again.[0m"
 echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
echo ""
fi
