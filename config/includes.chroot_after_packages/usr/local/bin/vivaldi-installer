#!/bin/bash
echo ""
echo ""
read -p "   [0;33mVivaldi Installer.[0m


   This script will download and install the Vivaldi Web Browser. 
   
   For more information: 
   https://vivaldi.com/
   
   [0;32m----------------------------------------------------------
   
   Please press enter to install the Vivaldi Browser.
   
   ----------------------------------------------------------[0m
      
   Or close this terminal window to quit the install." ;
   if : >/dev/tcp/8.8.8.8/53; then
echo ""
cd /tmp/ &&
sudo curl -LJO https://downloads.vivaldi.com/stable/vivaldi-stable_5.5.2805.32-1_amd64.deb &&
sudo apt update && sudo apt install -y ./vivaldi-stable_5.5.2805.32-1_amd64.deb libu2f-udev &&
sed -i '/Vivaldi,            vivaldi,          vivaldi/d' ~/.config/jgmenu/mymenu.csv &&
sed -i '5i Vivaldi,            vivaldi,          vivaldi' ~/.config/jgmenu/mymenu.csv &&
killall jgmenu
echo "----------------------------------------------------------------"
echo ""
echo "[0;32mAll Finished![0m"
echo ""
echo "[0;33mIf installed, You should find a new main menu entry for vivaldi.[0m"
echo "" 
echo "[0;32mMenu entries will need to be removed manually if uninstalled." 
echo "See Jgmenu Conf under Configuration in the menu for directions.[0m"
echo ""
echo "----------------------------------------------------------------"
else
echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
 echo ""
 echo "   [0;33mNo Internet connection. Please connect and try again.[0m"
 echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
echo ""
fi
