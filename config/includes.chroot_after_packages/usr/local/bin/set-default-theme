#!/bin/bash
echo ""
read -p "   Total Theme Reset

   A reset button to return some items back to their default settings.

   This will reset:
   
   GTK and Openbox themes, most fonts, icons, wallpaper, terminal, Geany,
   notification sounds, Jgmenu icons and fonts, and Lightdm settings.

   ----------------------------------------------------------------------
   
   Please press enter to reset items to their original configuration.
   
   ----------------------------------------------------------------------

      
   Or close this terminal window to quit." ;
echo ""
~/.config/lilidog-themes/default
echo ""
echo ""
echo ""
echo "------------------------------------------------------------------"
echo ""
echo "All finished! If something did not change, check to see if the item" 
echo "has been removed. (Uninstalled icons, wallpaper, etc.)"
echo ""
echo "------------------------------------------------------------------"
echo ""
