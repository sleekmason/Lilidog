#!/bin/bash
# Bright mode for tint2 in Lilidog by sleekmason 2-17-2022
#
#
FILE="$HOME/.config/tint2/tint2rc"
STRING="task_font_color = #C8DEDE 100"
if  grep -q "$STRING" "$FILE" ; then
         notify-send --urgency low 'Changing Tint2 text to default color' ;
         sed -i 's/task_font_color =.*/task_font_color = \#95D9E0 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#95D9E0 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#95D9E0 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#95D9E0 100/' $FILE
         
 else
         notify-send --urgency low 'Changing Tint2 text to gray' ;
         sed -i 's/task_font_color =.*/task_font_color = \#C8DEDE 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#C8DEDE 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#C8DEDE 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C8DEDE 100/' $FILE
fi
# restart tint2
pkill -x tint2
tint2 &
