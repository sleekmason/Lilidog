    --field="         Autoshrink!zoom-fit-best!":FBTN "tint2-shrink" \
    --field="       Battery Icon!battery":FBTN "tint2-batteryicon" \
    --field="     Transparency!preferences-system":FBTN "tint2-transparency" \
    --field="             12H/24H!time-admin":FBTN "tint2-12to24" \
    --field="         Bright/Dim!display-brightness":FBTN "tint2-bright" \
