#! /bin/bash
# tint2 battery color options options.
# Made be sleekmason for Lilidog 4-13-2022

FILE="$HOME/.config/tint2/tint2rc"
noti=$(yad --width 310 --borders=12 --entry --title "Tint2 Text Color" --center --window-icon=org.xfce.settings.color \
    --image="/usr/share/icons/hicolor/24x24/apps/org.xfce.settings.color.png" \
    --button="gtk-ok:0" \
    "Grey -Default" "Bright Grey" "Aqua" "Blue" "Navy" "Indigo" "Violet" "Magenta" "Green" "Black" "Red")

case $noti in
  Grey*)
    notify-send --urgency low 'Changing Tint2 text to Grey' ;
         sed -i 's/task_font_color =.*/task_font_color = \#C2C2CC 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#C2C2CC 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#C2C2CC 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C2C2CC 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #C2C2CC 100/g' $FILE
     killall -SIGUSR1 tint2
;;
  Bright*)
    notify-send --urgency low 'Changing Tint2 text to Bright Grey' ;
         sed -i 's/task_font_color =.*/task_font_color = \#C8DEDE 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#C8DEDE 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#C8DEDE 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C8DEDE 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #C8DEDE 100/g' $FILE
     killall -SIGUSR1 tint2
;;
  Aqua)
    notify-send --urgency low 'Changing Tint2 text to Aqua' ;
         sed -i 's/task_font_color =.*/task_font_color = \#96d2d9 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#96d2d9 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#96d2d9 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#96d2d9 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #96d2d9 100/g' $FILE
     killall -SIGUSR1 tint2
;;
  Blue)
    notify-send --urgency low 'Changing Tint2 text to Blue' ;
         sed -i 's/task_font_color =.*/task_font_color = \#96C5D9 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#96C5D9 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#96C5D9 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#96C5D9 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #96C5D9 100/g' $FILE
     killall -SIGUSR1 tint2
;;
  Navy*)
  notify-send --urgency low 'Changing Tint2 text to Bright Grey' ;
         sed -i 's/task_font_color =.*/task_font_color = \#9CBDD9 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#9CBDD9 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#9CBDD9 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#9CBDD9 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #9CBDD9 100/g' $FILE
     killall -SIGUSR1 tint2
;;
   Indigo)
   notify-send --urgency low 'Changing Tint2 text to Indigo' ;
         sed -i 's/task_font_color =.*/task_font_color = \#96A1D9 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#96A1D9 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#96A1D9 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#96A1D9 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #96A1D9 100/g' $FILE
     killall -SIGUSR1 tint2
;;
   Violet)
   notify-send --urgency low 'Changing Tint2 text to Violet' ;
         sed -i 's/task_font_color =.*/task_font_color = \#AA96D9 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#AA96D9 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#AA96D9 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#AA96D9 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #AA96D9 100/g' $FILE
     killall -SIGUSR1 tint2
;;
   Magenta)
   notify-send --urgency low 'Changing Tint2 text to Magenta' ;
         sed -i 's/task_font_color =.*/task_font_color = \#C596D9 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#C596D9 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#C596D9 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C596D9 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #C596D9 100/g' $FILE
     killall -SIGUSR1 tint2
;;
   Green)
   notify-send --urgency low 'Changing Tint2 text to Green' ;
         sed -i 's/task_font_color =.*/task_font_color = \#11B850 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#11B850 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#11B850 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#11B850 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #11B850 100/g' $FILE
     killall -SIGUSR1 tint2
;;
   Black)
   notify-send --urgency low 'Changing Tint2 text to Black' ;
         sed -i 's/task_font_color =.*/task_font_color = \#0A0A00 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#0A0A00 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#0A0A00 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#0A0A00 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #000000 100/g' $FILE
     killall -SIGUSR1 tint2 
;;
        Red)
   notify-send --urgency low 'Changing Tint2 text to Red' ;
         sed -i 's/task_font_color =.*/task_font_color = \#EB1313 100/' $FILE
         sed -i 's/clock_font_color =.*/clock_font_color = \#EB1313 100/' $FILE
         sed -i 's/execp_font_color =.*/execp_font_color = \#EB1313 100/' $FILE
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#EB1313 100/' $FILE
         sed -i 's/^battery_font_color.*/battery_font_color = #EB1313 100/g' $FILE
     killall -SIGUSR1 tint2 ;;
        *) exit 1 ;;
    esac
