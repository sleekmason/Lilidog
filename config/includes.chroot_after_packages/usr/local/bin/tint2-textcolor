#!/bin/bash
# tint2 font color.
# Made be sleekmason for Lilidog 4-13-2022

FILE="$HOME/.config/tint2/tint2rc"
noti=$(yad --width 310 --borders=12 --entry --title "Tint2 Font Color" --center --window-icon=org.xfce.settings.color \
    --image="/usr/share/icons/hicolor/24x24/apps/org.xfce.settings.color.png" \
    --button="gtk-cancel:1" --button="gtk-ok:0" \
    "Base - Default" "Light Grey" "Grey" "Dark Grey" "Adobe" "Aqua" "Blue" "Navy" "Indigo" "Violet" "Magenta" "Green" "Black" "White" "Red")

case $noti in
  Base*)
  notify-send --urgency low 'Changing Tint2 font colors to Base Default' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#CADBEB 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#CADBEB 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#CADBEB 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#CADBEB 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#CADBEB 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #CADBEB 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Light*)
  notify-send --urgency low 'Changing Tint2 font colors to Light Grey' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#C1CFDB 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#C1CFDB 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#C1CFDB 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#C1CFDB 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C1CFDB 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #C1CFDB 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Grey*)
    notify-send --urgency low 'Changing Tint2 font colors to Grey' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#B2BAC2 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#B2BAC2 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#B2BAC2 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#B2BAC2 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#B2BAC2 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #B2BAC2 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Dark*)
    notify-send --urgency low 'Changing Tint2 font colors to Dark Grey' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#A2AAB3 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#A2AAB3 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#A2AAB3 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#A2AAB3 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#A2AAB3 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #A2AAB3 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Adobe*)
    notify-send --urgency low 'Changing Tint2 font colors to Adobe' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#C2BEB2 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#C2BEB2 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#C2BEB2 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#C2BEB2 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C2BEB2 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #C2BEB2 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Aqua)
    notify-send --urgency low 'Changing Tint2 font colors to Aqua' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#96d2d9 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#96d2d9 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#96d2d9 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#96d2d9 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#96d2d9 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #96d2d9 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Blue)
    notify-send --urgency low 'Changing Tint2 font colors to Blue' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#96C5D9 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#96C5D9 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#96C5D9 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#96C5D9 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#96C5D9 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #96C5D9 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
  Navy*)
  notify-send --urgency low 'Changing Tint2 font colors to Navy' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#A0BCDE 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#A0BCDE 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#A0BCDE 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#A0BCDE 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#A0BCDE 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #A0BCDE 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Indigo)
   notify-send --urgency low 'Changing Tint2 font colors to Indigo' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#96A1D9 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#96A1D9 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#96A1D9 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#96A1D9 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#96A1D9 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #96A1D9 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Violet)
   notify-send --urgency low 'Changing Tint2 font colors to Violet' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#AA96D9 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#AA96D9 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#AA96D9 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#AA96D9 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#AA96D9 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #AA96D9 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Magenta)
   notify-send --urgency low 'Changing Tint2 font colors to Magenta' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#C596D9 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#C596D9 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#C596D9 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#C596D9 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#C596D9 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #C596D9 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Green)
   notify-send --urgency low 'Changing Tint2 font colors to Green' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#11B850 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#11B850 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#11B850 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#11B850 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#11B850 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #11B850 100/g' "$FILE"
     killall -SIGUSR1 tint2
;;
   Black)
   notify-send --urgency low 'Changing Tint2 font colors to Black' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#0A0A00 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#0A0A00 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#0A0A00 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#0A0A00 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#0A0A00 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #000000 100/g' "$FILE"
     killall -SIGUSR1 tint2 
;;
   White)
   notify-send --urgency low 'Changing Tint2 font colors to White' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#ffffff 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#ffffff 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#ffffff 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#ffffff 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#ffffff 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #ffffff 100/g' "$FILE"
     killall -SIGUSR1 tint2 
;;
        Red)
   notify-send --urgency low 'Changing Tint2 font colors to Red' ;
         sed -i 's/taskbar_name_font_color =.*/taskbar_name_font_color = \#EB1313 100/' "$FILE"
         sed -i 's/taskbar_name_active_font_color =.*/taskbar_name_active_font_color = \#EB1313 100/' "$FILE"
         sed -i 's/task_font_color =.*/task_font_color = \#EB1313 100/' "$FILE"
         sed -i 's/clock_font_color =.*/clock_font_color = \#EB1313 100/' "$FILE"
         sed -i 's/tooltip_font_color =.*/tooltip_font_color = \#EB1313 100/' "$FILE"
         sed -i 's/^battery_font_color.*/battery_font_color = #EB1313 100/g' "$FILE"
     killall -SIGUSR1 tint2 ;;
        *) exit 1 ;;
    esac
