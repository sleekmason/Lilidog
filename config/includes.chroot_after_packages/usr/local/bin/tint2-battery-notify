#!/bin/bash
if test -e "/sys/module/battery";then
FILE="$HOME/.config/tint2/tint2rc"
STRING="bat1_format = %"
if  grep -q "$STRING" "$FILE" ; then

notify-send --urgency low 'Extra notifications are currently enabled'
else
notify-send --urgency low 'Extra notifications are currently disabled'
fi
yad --title "Extra Notifications" --button=gtk-close:1 --form --center --width=280 --borders=8 \
--height=160 --text="\nAdditional Battery And Power\nNotifications For Laptop Use. \n" --text-align=center \
--window-icon=utilities-system-monitor \
    --form \
    --field="   Extra Notifications On/Off!battery-full-charging":FBTN "bash -c 'tint2-bat-options'" \
    --field="   Critical Threshold % Level!emblem-system":FBTN "bash -c 'critical-batt-notification-amount '" \
    --field="":LBL "" \
exit
else
notify-send --urgency low 'No Battery Found.' ;
fi
