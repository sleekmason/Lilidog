#!/bin/bash
read -p "              [0;33mBreeze Icon Theme Installer.[0m


   Just a convenience to download the Breeze Icon theme set.
    
   ---------------------------------------------------------------
   
   [0;32mPlease press enter to install the Breeze Icon Theme.[0m
   
   ---------------------------------------------------------------    
      
   Or close this terminal window to quit the install." ;
   if : >/dev/tcp/8.8.8.8/53; then
echo ""
sudo apt update && sudo apt install breeze-icon-theme

echo ""
echo ""
echo "[0;32mAll done. Enjoy your new icon theme![0m"
echo ""
echo ""
else
echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
 echo ""
 echo "   [0;33mNo Internet connection. Please connect and try again.[0m"
 echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
echo ""
fi
