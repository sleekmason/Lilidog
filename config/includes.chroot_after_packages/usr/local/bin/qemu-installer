#!/bin/bash
echo ""
echo ""
echo ""
read -p "   Qemu Installer

   Qemu/kvm is a virtual machine, similar to VirtualBox.
   This will install Qemu with --recommends enabled.

   https://qemu-project.gitlab.io/qemu/
   
    
   
   ---------------------------------------------------------
   
   Please press enter to install Qemu.
   
   ---------------------------------------------------------
   
   
   Or close this terminal window to quit the install." ;
echo "" 
sudo apt update && sudo apt install --install-recommends qemu-system-x86 virt-manager
grep -qF "VM Manager,         virt-manager,       virt-manager" ~/.config/jgmenu/mymenu.csv  || sed -i '30 a VM Manager,         virt-manager,       virt-manager' ~/.config/jgmenu/mymenu.csv
echo ""
echo "-----------------------------------------------------"
echo ""
echo "All Finished!"
echo ""
echo "If installed, You should find a new menu entry under 'Quick Grab'"
echo "labeled 'VM Manager'"
echo "" 
echo "For quick use, open a terminal where you have an ISO and use:"
echo "kvm -cdrom <Your-Cool-ISO-amd64.hybrid.iso> -m 2048"
echo "" 
echo ""
echo "-----------------------------------------------------"
