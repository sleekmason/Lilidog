[colors]
;background = ${xrdb:color0:#193A3E}
background = #961B1C1F
background-alt = #96222326
;foreground = ${xrdb:color7:#ABCCCC}
foreground = #CCD2D4
foreground-alt = #CBD3D6
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/lili-bar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 26
bottom = true
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 2
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 3

font-0 = JetBrains Mono:style=Regular:size=11:antialias=true;2
font-1 = Noto Sans Mono:style=Regular:size=11:antialias=true;2
font-2 = OpenSymbol:style=Regular:size=10

modules-left = xdesktops
#modules-center = mpd
