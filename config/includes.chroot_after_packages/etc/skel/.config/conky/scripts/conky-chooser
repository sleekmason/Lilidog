#!/bin/bash

toggle_conky () {
#  toggle individual conky on/off

if pgrep -f ${1}.conf > /dev/null; then
    pkill -f ${1}.conf
else
    conky -c $HOME/.config/conky/${1}.conf
fi
}
export -f toggle_conky

yad --title "Conky" --button=gtk-close:1 --form --center --width=230 \
--height=600 --text="\nToggle Your Selections\n" --text-align=center \
--window-icon=conky-logomark-violet \
    --form \
    --field="                          Clock!time-admin":BTN "bash -c 'toggle_conky conky-clock-date'" \
    --field="                     Full Info!dialog-information":BTN "bash -c 'toggle_conky conky-full'" \
    --field="                    Fortunes!emblem-package":BTN "bash -c 'toggle_conky conky-fortunes'" \
    --field="              Tao Te Ching!application-x-addon":BTN "bash -c 'toggle_conky conky-tao'" \
    --field="                   Shortcuts!accessories-text-editor":BTN "bash -c 'toggle_conky conky-shortcuts'" \
    --field="               World Clock!emblem-web":BTN "bash -c 'toggle_conky conky-world-clock'" \
    --field="                Install Date!application-certificate":BTN "bash -c 'toggle_conky conky-build'" \
    --field="       12H/24H Format!time-admin":BTN "bash -c '~/.config/conky/scripts/conky-12to24'" \
    --field="       Bg Transparency!preferences-system":BTN "bash -c '~/.config/conky/scripts/conky-bg-trans'" \
    --field="             Bg Tint Color!org.xfce.settings.color":BTN "bash -c '~/.config/conky/scripts/conky-bg-color'" \
    --field="":LBL "" \
    --field="            Restart Conky!media-playlist-repeat":FBTN "killall -SIGUSR1 conky" \
    --field="                  Kill Conky!process-stop":FBTN "killall conky" 
